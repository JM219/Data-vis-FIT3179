{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "title": "Airport Traffic in Australian airports",
    "data": {
        "url": "https://raw.githubusercontent.com/JM219/Data-vis-FIT3179/main/Data-vis-assignment-2/Data_files/Data_01.csv"
        
    },

    "params": [
        {
            "name": "Airport_Selection",
            "value": "PERTH",
            "bind": {
                "input": "select",
                "options": [
                    "ADELAIDE",
                    "ALICE SPRINGS",
                    "MELBOURNE",
                    "GOLD COAST",
                    "HOBART",
                    "PERTH",
                    "BRISBANE",
                    "SYDNEY",
                    "SUNSHINE"
                ],
                "labels": [
                    "ADELAIDE",
                    "ALICE SPRINGS",
                    "MELBOURNE",
                    "GOLD COAST",
                    "HOBART",
                    "PERTH",
                    "BRISBANE",
                    "SYDNEY",
                    "SUNSHINE"
                ],
                "name": "Airport Selection: "
            }
        },

        {
            "name": "Year_Selected",
            "value": 1990,
            "bind": {
                "input": "range",
                "min": 1985,
                "max": 2021,
                "step": 1,
                "name": "Desired Year: "
            }
        }
    ],


    "transform": [
        {"filter": "datum.AIRPORT == Airport_Selection"},
        {"filter": "datum.Year == Year_Selected"}
    ],

    "layer": [
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Month",
                    "type": "ordinal",
                    "title": "Domestic passengers total"
                },

                "y": {
                    "field": "Dom_Pax_Total",
                    "type": "quantitative",
                    "title": "Domestic passengers Arriving",
                    "scale": {"domain": [0, 3000000]}
                },

                "color": {
                    "field": "AIRPORT",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "ADELAIDE",
                            "ALICE SPRINGS",
                            "MELBOURNE",
                            "GOLD COAST",
                            "HOBART",
                            "PERTH",
                            "BRISBANE",
                            "SYDNEY",
                            "SUNSHINE"
                        ],

                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628",
                            "#2be41a",
                            "#e47f1a",
                            "#671ae4"
                        ]   
                    } 
                },

                "tooltip": [
                    {"title": "Airport", "field": "AIRPORT", "type": "nominal"},
                    {"field": "Month", "type": "quantitative", "format": ","},
                    {"title": "Domestic passengers", "field": "Dom_Pax_Total", "type": "quantitative", "format": ","}
                ]
                        
            }
        },
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "Month",
                    "type": "ordinal",
                    "title": "Domestic passengers total"
                },

                "y": {
                    "field": "Int_Pax_Total",
                    "type": "quantitative",
                    "title": "Domestic passengers Arriving",
                    "scale": {"domain": [0, 3000000]}
                },

                "color": {
                    "field": "AIRPORT",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "ADELAIDE",
                            "ALICE SPRINGS",
                            "MELBOURNE",
                            "GOLD COAST",
                            "HOBART",
                            "PERTH",
                            "BRISBANE",
                            "SYDNEY",
                            "SUNSHINE"
                        ],

                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#a6cee3",
                            "#377eb8",
                            "#a65628",
                            "#2be41a",
                            "#e47f1a",
                            "#671ae4"
                        ]   
                    } 
                },

                "tooltip": [
                    {"title": "Airport", "field": "AIRPORT", "type": "nominal"},
                    {"field": "Month", "type": "quantitative", "format": ","},
                    {"title": "International passengers", "field": "Int_Pax_Total", "type": "quantitative", "format": ","}
                ]
            }
        }
    ]
}
    